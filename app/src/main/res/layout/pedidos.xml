<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="7dp"
    android:background="@drawable/shadow"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/ly_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_nome_do_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:minWidth="100dp"
                android:text="Fernando Antônio da Silva Filho"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly_nome"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/endereco_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_endereco_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rua Salvador pilo"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly_nome"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/ly_endereco"
            android:orientation="vertical">

            <TextView
                android:id="@+id/produto_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produto pedido"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_produto_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:minWidth="80dp"
                android:text="Água e Gás"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingVertical="20dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ly_qtd_gas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qtd_gas"
                android:layout_width="88dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="@string/quantidade_de_gas"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_qtd_gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_agua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ly_qtd_gas"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qtd_agua"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="@string/quantidade_de_gua"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_qtd_agua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ly_agua"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/data_pedido"
                android:layout_width="59dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="Data do pedido"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_data_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26/03/2020"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ly_data"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="4dp">

            <TextView
                android:id="@+id/horario_pedido"
                android:layout_width="74dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:text="Horário do pedido"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_horario_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:33:55"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>