<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/shadow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/nome_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Nome"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_nome_do_pedido"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nome_cliente"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Textview"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/endereco_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/nome_cliente"
            android:text="Endereço"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_endereco_cliente"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/endereco_cliente"
            android:layout_marginStart="35dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/txt_nome_do_pedido"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/produto_cliente"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/endereco_cliente"
            android:text="Produto pedido"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_produto_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/produto_cliente"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/endereco_cliente"
            android:text="Textview"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/qtd_gas"
            android:layout_width="85dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/quantidade_de_gas"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_qtd_gas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qtd_gas"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/qtd_agua"
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/qtd_gas"
            android:gravity="center"
            android:text="@string/quantidade_de_gua"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_qtd_agua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qtd_agua"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/txt_qtd_gas"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/data_pedido"
            android:layout_width="58dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/qtd_agua"
            android:gravity="center"
            android:text="Data do pedido"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_data_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_pedido"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/txt_qtd_agua"
            android:text="Textview"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/horario_pedido"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/data_pedido"
            android:gravity="center"
            android:text="Horário do pedido"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_horario_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horario_pedido"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/txt_data_pedido"
            android:text="Textview"
            android:textColor="@android:color/black" />

    </RelativeLayout>

</LinearLayout>